MDScreen:
    recipeList: recipeList
    name: 'recipeList'
    MDFloatLayout:
        md_bg_color: 72/255, 61/255, 139/255, .5
        MDLabel:
            text: 'Recipe List'
            pos_hint: {"center_x": .6, "center_y": .95}
            font_size: '35sp'

        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .8
            pos_hint: {"center_x": .5, "y": 0.1}
            bar_width: 0
            GridLayout:
                id: recipeList
                cols: 1
                height: self.minimum_height
                row_default_height: 75
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 20

    Buttons:
        text: 'X'
        pos_hint: {"center_x": .85, "center_y": .05}
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'main'
            app.clean_ingSelector_list()


<Buttons@MDFillRoundFlatButton>

    user_font_size: '10sp'
    md_bg_color: 75/255, 0/255, 130/255, 1
    theme_text_color: 'Custom'
    text_color: 1,1,1,1