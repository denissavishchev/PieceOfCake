MDScreen:
    recipeList: recipeList
    name: 'recipeList'
    MDFloatLayout:
        FitImage:
            size_hint_y: 1
            source:'image/bg.png'
        MDFloatLayout:
            Image:
                source: 'image/bg-name.png'
                pos_hint: {"center_x": .5, "center_y": .92}
            MDLabel:
                text: 'Recipe List'
                font_name: 'KaushanScript-Regular.ttf'
                pos_hint: {"center_x": .7, "center_y": .93}
                font_size: '35sp'
                theme_text_color: "Custom"
                text_color: 255 / 255, 255 / 255, 255 / 255, 1


        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .75
            pos_hint: {"center_x": .5, "y": 0.1}
            bar_width: 0
            GridLayout:
                id: recipeList
                cols: 1
                height: self.minimum_height
                row_default_height: 70
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 20

    Buttons:
        text: 'X'
        pos_hint: {"center_x": .85, "center_y": .05}
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'main'
            app.clean_ingSelector_list()


<Buttons@MDFillRoundFlatButton>

    user_font_size: '10sp'
    md_bg_color: 75/255, 0/255, 130/255, 1
    theme_text_color: 'Custom'
    text_color: 1,1,1,1
    font_name: 'KaushanScript-Regular.ttf'