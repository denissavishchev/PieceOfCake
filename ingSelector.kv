MDScreen:
    search: search
    selectorList: selectorList
    name: 'ingSelector'
#    addRemove: addRemove
    MDFloatLayout:
        md_bg_color: 72/255, 61/255, 139/255, .5

        MDFloatLayout:
            size_hint: .65, .08
            pos_hint: {"center_x": .4, "center_y": .92}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: search
                hint_text: 'Search...'
                multiline: False
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                cursor_color: 75/255, 0/255, 130/255, 1
                background_color: 0, 0, 0, 0
                padding: 15
                font_size: '18sp'
                on_text:
                    app.add_ingredient_to_recipe(search.text)

        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .71
            pos_hint: {"center_x": .55, "y": 0.15}
            bar_width: 0
            GridLayout:
                id: selectorList
                cols: 1
                height: self.minimum_height
                row_default_height: 80
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 20

    Buttons:
        text: 'X'
        pos_hint: {"center_x": .85, "center_y": .92}
        on_release:
            root.manager. transition.direction = 'right'
            root.manager.current = 'createRecipe'
            app.clean_ingSelector_list()


<Buttons@MDFillRoundFlatButton>

    user_font_size: '10sp'
    md_bg_color: 75/255, 0/255, 130/255, 1
    theme_text_color: 'Custom'
    text_color: 1,1,1,1

