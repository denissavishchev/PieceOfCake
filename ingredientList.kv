MDScreen:

    ingredientList: ingredientList
    name: 'ingredientList'
    MDFloatLayout:
        md_bg_color: 72/255, 61/255, 139/255, .5
        MDLabel:
            text: 'Ingredient List'
            pos_hint: {"center_x": .6, "center_y": .95}
            font_size: '35sp'


        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .8
            pos_hint: {"center_x": .5, "y": 0}
            bar_width: 0
            GridLayout:
                id: ingredientList
                cols: 1
                height: self.minimum_height
                row_default_height: 80
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 20
