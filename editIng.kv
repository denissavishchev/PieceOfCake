#:import Snackbar kivymd.uix.snackbar.Snackbar
#:import Window kivy.core.window.Window
MDScreen:
#    ingredients: ingredients
#    message: message
    todo_list: todo_list
    name: 'maining'
    MDFloatLayout:
        md_bg_color: 72/255, 61/255, 139/255, .5
        MDLabel:
            text: 'Piece of Cake'
            pos_hint: {"center_x": .6, "center_y": .95}
            font_size: '35sp'

        Buttons:
            text: 'List of\nIngredient'
            pos_hint: {"center_x": .15, "center_y": .87}
            on_release:
                root.manager. transition.direction = 'left'
                root.manager.current = 'ingredientList'
                app.load_ingredient()

        Buttons:
            text: 'Create\nIngredient'
            pos_hint: {"center_x": .41, "center_y": .87}
            on_release:
                root.manager. transition.direction = 'up'
                root.manager.current = 'create'
                app.toCreateWindow()
        Buttons:
            text: 'Create\nRecipe'
            pos_hint: {"center_x": .66, "center_y": .87}
            on_release:
                root.manager. transition.direction = 'up'
#                root.manager.current = 'add_todo'
        Buttons:
            text: 'List of \nRecipes'
            pos_hint: {"center_x": .87, "center_y": .87}
            on_release:
#                root.manager. transition.direction = 'left'
#                root.manager.current = 'to_ingredient_list'
        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .8
            pos_hint: {"center_x": .5, "y": 0}
            bar_width: 0
            GridLayout:
                id: todo_list
                cols: 1
                height: self.minimum_height
                row_default_height: 80
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 20


<Buttons@MDFillRoundFlatButton>

    user_font_size: '10sp'
    md_bg_color: 75/255, 0/255, 130/255, 1
    theme_text_color: 'Custom'
    text_color: 1,1,1,1


