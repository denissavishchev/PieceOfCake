

<CustomPopup>:
    id: popup
    auto_dismiss: False
    contentBox: content_box
    BoxLayout:
        id: content_box
        orientation: "vertical"
        content: content_text
        size_hint: .01, 1

        MDLabel:
            text: '  Ingredients:'
            size_hint: .9, .1
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: '20sp'
        ScrollView:
            effect_cls: "ScrollEffect" # prevents overscrolling
            MDLabel:
                id: content_text
                size_hint_y: None
                height: self.texture_size[1]
                text: str(root.unit)
                text_size: (self.width-40), None
                font_size: '18sp'
                line_height: 1.2
                valign: "top"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: 216/255, 193/255, 222/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                        source: 'image/1.png'

        MDLabel:
            text: '  Comment:'
            size_hint: .9, .1
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: '20sp'
        ScrollView:
            effect_cls: "ScrollEffect" # prevents overscrolling
            Label:
                id: content_text
                size_hint_y: None
                height: self.texture_size[1]
                text: str(root.Recomment)
                text_size: (self.width-40), None
                font_size: '18sp'
                line_height: 1.2
                valign: "top"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: 216/255, 193/255, 222/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                        source: 'image/1.png'

        Buttons:
            text: "Close"
#            size_hint: None, .1
            pos_hint: {"center_x": .5, "center_y": .5}
            height: "40dp"
            on_press: root.dismiss()

<CompleteRecipe>
    id: CompleteRecipe
    elevation: 1
    md_bg_color: 1,1,1,1
    radius: [20]
    orientation: "vertical"

    MDFloatLayout:
        id: bar
        radius: [20]
        size_hint: .6, .9
        pos_hint: {"center_x": .5, "center_y": .5}
        md_bg_color: 75/255, 0/255, 130/255, .2 #if UnitC.text == 'cake' else (255/255, 102/255, 0/255, .5)
    MDFloatLayout:
        size_hint: .11, .9
        pos_hint: {"center_x": .75, "center_y": .5}
        canvas:
            Color:
                rgb: (210/255, 210/255, 210/255, .5)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]
        TextInput:
            id: Diameter
            hint_text: 'D'
            multiline: False
            font_size: '18sp'
            size_hint: 1, None
            height: 55
            input_filter: 'int'
            cursor_color: 75/255, 0/255, 130/255, 1
            background_color: 0,0,0,0
            pos_hint: {"center_x": .5, "center_y": .5}

    MDLabel:
        id: Renames
        text: str(root.Renames)
        markup: True
        font_size: '25sp'
        size_hint_x: .8
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        pos_hint: {"center_x": .65, "center_y": .5}

    Buttons:
        id: show
        pos_hint: {"center_x": .9, "center_y": .5}
        size_hint: .16, .9
        text: 'Show'
        on_release:
            app.show_recipe(Renames.text)


    MyToggleButton:
        id: Calc
        text: 'Calc'
        size_hint: .15, .7
        font_size: '18sp'
        pos_hint: {"center_x": .1, "center_y": .5}
        group: 'addRecipe'
        on_state:
            if self.state == "down":\
            self.text = 'Added'
            elif self.state == 'normal':\
            self.text = 'Calc'


<AddIngToRecipe>
    id: addIngToRecipe
    elevation: 10
    md_bg_color: 1,1,1,1
    radius: [8]
    names: names
    addRemove: addRemove
    unit: unit
    MDLabel:
        id: names
        name: 'names'
        text: str(root.names)
        markup: True
        font_size: '20sp'
        size_hint_x: .8
        pos_hint: {"center_x": .4, "center_y": .4}
    MDLabel:
        id: unit
        text: str(root.unit)
        markup: True
        font_size: '18sp'
        size_hint_x: .8
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        pos_hint: {"center_x": .9, "center_y": .4}

    ToggleButton:
        id: addRemove
        pos_hint: {"center_x": .8, "center_y": .4}
        size_hint: .16, .9
        text: 'Remove' if self.state == 'normal' else 'Rmd'
        on_release:
            addIngToRecipe.parent.remove_widget(addIngToRecipe)
        background_color: (0,0,0,0)
        background_normal: ''
        canvas.before:
            Color:
                rgba: (75/255, 0/255, 130/255, 1) if self.state == 'normal' else (75/255, 0/255, 130/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [18]



<AddRecipe>
    id: AddRecipe
    elevation: 10
    md_bg_color: 1,1,1,1
    radius: [8]
    names: names
    addRemove: addRemove
    qty: qty
    MDLabel:
        id: names
        text: str(root.names)
        markup: True
        font_size: '20sp'
        size_hint_x: .8
        pos_hint: {"center_x": .4, "center_y": .4}
    MDLabel:
        id: unit
        text: str(root.unit)
        markup: True
        size_hint_x: .35
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        pos_hint: {"center_x": .8, "center_y": .4}
    MDFloatLayout:
        size_hint: .2, .9
        pos_hint: {"center_x": .5, "center_y": .4}
        canvas:
            Color:
                rgb: (238/255, 238/255, 238/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]
        TextInput:
            id: qty
            hint_text: 'Qty:'
            size_hint: 1, None
            input_filter: 'int'
            pos_hint: {"center_x": .5, "center_y": .5}
            height: 55
            cursor_color: 75/255, 0/255, 130/255, 1
            background_color: 0, 0, 0, 0
            multiline: False
#            padding: 15
            font_size: '18sp'
    ToggleButton:
        id: addRemove
        pos_hint: {"center_x": .8, "center_y": .4}
        size_hint: .16, .9
        text: 'Add' if self.state == 'normal' else 'Added'
        on_release:
            app.add_ing_to_recipe(names.text, unit.text, qty.text) #if self.state == 'down' else app.remove_ing_from_recipe(names.text)
            self.state = 'down'
            self.disabled = True
        background_color: (0,0,0,0)
        background_normal: ''
        canvas.before:
            Color:
                rgba: (75/255, 0/255, 130/255, .3) if self.state == 'normal' else (75/255, 0/255, 130/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [18]


<AddIngredient>
    id: AddIngredient
    elevation: 10
    md_bg_color: 1,1,1,1
    radius: [8]
    names: names
    MDFloatLayout:
        id: bar
        size_hint: .01, .9
        pos_hint: {"center_x": .02, "center_y": .5}
