<CustomPopup>:
    id: popup
    auto_dismiss: False
    contentBox: content_box
    BoxLayout:
        id: content_box
        orientation: "vertical"
        content: content_text
        size_hint: .01, 1

        MDLabel:
            text: '  Ingredients:'
            size_hint: .9, .1
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: '20sp'
        ScrollView:
            effect_cls: "ScrollEffect" # prevents overscrolling
            MDLabel:
                id: content_text
                size_hint_y: None
                height: self.texture_size[1]
                text: str(root.unit)
                text_size: (self.width-40), None
                font_size: '18sp'
                line_height: 1.2
                valign: "top"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: 216/255, 193/255, 222/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                        source: 'image/1.png'
#        Widget:
#            size_hint_y: .01

        MDLabel:
            text: '  Comment:'
            size_hint: .9, .1
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: '20sp'
        ScrollView:
            effect_cls: "ScrollEffect" # prevents overscrolling
            Label:
                id: content_text
                size_hint_y: None
                height: self.texture_size[1]
                text: 'Comment:\n' + str(root.Recomment)
                text_size: (self.width-40), None
                font_size: '18sp'
                line_height: 1.2
                valign: "top"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: 216/255, 193/255, 222/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                        source: 'image/1.png'

        Buttons:
            text: "Close"
#            size_hint: None, .1
            pos_hint: {"center_x": .5, "center_y": .5}
            height: "40dp"
            on_press: root.dismiss()

<CompleteRecipe>
    id: CompleteRecipe
    elevation: 1
    md_bg_color: 1,1,1,1
    radius: [20]
#    Renames: Renames
    orientation: "vertical"

    MDFloatLayout:
        id: bar
        radius: [20]
        size_hint: .6, .9
        pos_hint: {"center_x": .5, "center_y": .5}
        md_bg_color: 75/255, 0/255, 130/255, .2
    MDLabel:
        id: Renames
        text: str(root.Renames)
        markup: True
        font_size: '25sp'
        size_hint_x: .8
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        pos_hint: {"center_x": .7, "center_y": .5}

    Buttons:
        id: show
        pos_hint: {"center_x": .9, "center_y": .5}
        size_hint: .16, .9
        text: 'Show'
        on_release:
            app.show_recipe(Renames.text)


    MyToggleButton:
        id: addRe
        text: 'Calc'
        size_hint: .15, .7
        font_size: '18sp'
        pos_hint: {"center_x": .1, "center_y": .5}
        group: 'addRecipe'
        on_state:
            if self.state == "down":\
            self.text = 'Added'
            elif self.state == 'normal':\
            self.text = 'Calc'


<AddIngToRecipe>
    id: addIngToRecipe
    elevation: 10
    md_bg_color: 1,1,1,1
    radius: [8]
    names: names
    addRemove: addRemove
    unit: unit
    MDLabel:
        id: names
        name: 'names'
        text: str(root.names)
        markup: True
        font_size: '20sp'
        size_hint_x: .8
        pos_hint: {"center_x": .4, "center_y": .4}
    MDLabel:
        id: unit
        text: str(root.unit)
        markup: True
        font_size: '18sp'
        size_hint_x: .8
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        pos_hint: {"center_x": .9, "center_y": .4}

    ToggleButton:
        id: addRemove
        pos_hint: {"center_x": .8, "center_y": .4}
        size_hint: .16, .9
        text: 'Remove' if self.state == 'normal' else 'Rmd'
        on_release:
            addIngToRecipe.parent.remove_widget(addIngToRecipe)
        background_color: (0,0,0,0)
        background_normal: ''
        canvas.before:
            Color:
                rgba: (75/255, 0/255, 130/255, 1) if self.state == 'normal' else (75/255, 0/255, 130/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [18]



<AddRecipe>
    id: AddRecipe
    elevation: 10
    md_bg_color: 1,1,1,1
    radius: [8]
    names: names
    addRemove: addRemove
    qty: qty
    MDLabel:
        id: names
        text: str(root.names)
        markup: True
        font_size: '20sp'
        size_hint_x: .8
        pos_hint: {"center_x": .4, "center_y": .4}
    MDLabel:
        id: unit
        text: str(root.unit)
        markup: True
        size_hint_x: .35
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        pos_hint: {"center_x": .8, "center_y": .4}
    MDFloatLayout:
        size_hint: .2, .9
        pos_hint: {"center_x": .5, "center_y": .4}
        canvas:
            Color:
                rgb: (238/255, 238/255, 238/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]
        TextInput:
            id: qty
            hint_text: 'Qty:'
            size_hint: 1, None
            input_filter: 'int'
            pos_hint: {"center_x": .5, "center_y": .5}
            height: 55
            cursor_color: 75/255, 0/255, 130/255, 1
            background_color: 0, 0, 0, 0
            multiline: False
#            padding: 15
            font_size: '18sp'
    ToggleButton:
        id: addRemove
        pos_hint: {"center_x": .8, "center_y": .4}
        size_hint: .16, .9
        text: 'Add' if self.state == 'normal' else 'Added'
        on_release:
            app.add_ing_to_recipe(names.text, unit.text, qty.text) #if self.state == 'down' else app.remove_ing_from_recipe(names.text)
            self.state = 'down'
            self.disabled = True
        background_color: (0,0,0,0)
        background_normal: ''
        canvas.before:
            Color:
                rgba: (75/255, 0/255, 130/255, .3) if self.state == 'normal' else (75/255, 0/255, 130/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [18]


<AddIngredient>
    id: AddIngredient
    elevation: 10
    md_bg_color: 1,1,1,1
    radius: [8]
    names: names
    MDFloatLayout:
        id: bar
        size_hint: .01, .9
        pos_hint: {"center_x": .02, "center_y": .5}
        md_bg_color: 75/255, 0/255, 130/255, 1
    MDLabel:
        id: names
        text: str(root.names)
        markup: True
        font_size: '20sp'
        size_hint_x: .8
        pos_hint: {"center_x": .46, "center_y": .8}
    MDLabel:
        id: quantity
        text: root.quantity + str(root.unit)
        markup: True
        size_hint_x: .9
        line_height: .8
        pos_hint: {"center_x": .51, "center_y": .2}
    MDLabel:
        id: price
        text: root.price + '$'
        markup: True
        size_hint_x: .9
        line_height: .8
        pos_hint: {"center_x": .71, "center_y": .2}
    MDLabel:
        id: comment
        text: root.comment
        markup: True
        size_hint_x: .9
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 0
        pos_hint: {"center_x": .1, "center_y": .2}

    MDIconButton:
        icon: 'comment-text-outline'
        pos_hint: {"center_x": .95, "center_y": .8}
        theme_text_color: 'Custom'
        text_color: (75/255, 0/255, 130/255, .1) if comment.text =='' else (75/255, 0/255, 130/255, 1)
        on_release: app.show_comment(comment.text)



MDScreen:
#    ingredients: ingredients
#    message: message
    todo_list: todo_list
    name: 'main'
    MDFloatLayout:
        md_bg_color: 72/255, 61/255, 139/255, .5

        MDLabel:
            text: 'Piece of Cake'
            pos_hint: {"center_x": .7, "center_y": .95}
            font_size: '35sp'
            theme_text_color: "Custom"
            text_color: 218/255, 66/255, 0/255, 1

        Buttons:
            text: 'List of\nIngredient'
            pos_hint: {"center_x": .15, "center_y": .87}
            on_release:
                root.manager. transition.direction = 'left'
                root.manager.current = 'ingredientList'
                app.load_ingredient()

        Buttons:
            text: 'Create\nIngredient'
            pos_hint: {"center_x": .41, "center_y": .87}
            on_release:
                root.manager. transition.direction = 'up'
                root.manager.current = 'create'

        Buttons:
            text: 'Create\nRecipe'
            pos_hint: {"center_x": .66, "center_y": .87}
            on_release:
                root.manager. transition.direction = 'up'
                root.manager.current = 'createRecipe'
        Buttons:
            text: 'List of \nRecipes'
            pos_hint: {"center_x": .87, "center_y": .87}
            on_release:
                root.manager. transition.direction = 'left'
                root.manager.current = 'recipeList'
                app.load_recipes()
        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .8
            pos_hint: {"center_x": .5, "y": 0}
            bar_width: 0
            GridLayout:
                id: todo_list
                cols: 1
                height: self.minimum_height
                row_default_height: 80
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 20


<Buttons@MDFillRoundFlatButton>

    user_font_size: '10sp'
    md_bg_color: 75/255, 0/255, 130/255, 1
    theme_text_color: 'Custom'
    text_color: 1,1,1,1


