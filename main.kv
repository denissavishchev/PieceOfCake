MDScreen:
    id: main
    name: 'main'
    main_page: main_page
    square: square
    circle: circle
    weight:weight
    MDFloatLayout:
        md_bg_color: 72/255, 61/255, 139/255, .5

        MDLabel:
            id: coefficient
            text: 'Piece of Cake'
            pos_hint: {"center_x": .7, "center_y": .95}
            font_size: '35sp'
            theme_text_color: "Custom"
            text_color: 218/255, 66/255, 0/255, 1

        Buttons:
            text: 'List of\nIngredient'
            pos_hint: {"center_x": .15, "center_y": .87}
            on_release:
                root.manager. transition.direction = 'left'
                root.manager.current = 'ingredientList'
                app.load_ingredient()

        Buttons:
            text: 'Create\nIngredient'
            pos_hint: {"center_x": .41, "center_y": .87}
            on_release:
                root.manager. transition.direction = 'up'
                root.manager.current = 'create'

        Buttons:
            text: 'Create\nRecipe'
            pos_hint: {"center_x": .66, "center_y": .87}
            on_release:
                root.manager. transition.direction = 'up'
                root.manager.current = 'createRecipe'
        Buttons:
            id: one
            text: 'List of \nRecipes'
            pos_hint: {"center_x": .87, "center_y": .87}
            on_release:
                root.manager. transition.direction = 'left'
                root.manager.current = 'recipeList'
                app.load_recipes()

        ScrollView:
            id: MainLayout
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .2
            pos_hint: {"center_x": .5, "y": 0.62}
            bar_width: 0
            GridLayout:
                id: main_page
                cols: 1
                height: self.minimum_height
                row_default_height: 80
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 20

        FloatLayout:
#            size_hint: .2, .035
            pos_hint: {"center_x": .5, "center_y": .4}
            MyToggleButton:
                id: square
                size_hint: .3, .13
                pos_hint: {"center_x": .8, "center_y": .45}
                group: 'form'
                Image:
                    source: 'image/square.png'

            MyToggleButton:
                id: circle
                size_hint: .3, .13
                pos_hint: {"center_x": .2, "center_y": .45}
                group: 'form'
                Image:
                    source: 'image/circle.png'


            MDFloatLayout:
                id: square_length_layout
                size_hint: .2, .04
                pos_hint: {"center_x": .53, "center_y": .495}
                canvas:
                    Color:
                        rgb: (238/255, 238/255, 238/255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [25]
                TextInput:
                    id: square_length
                    hint_text: 'Length'
                    input_filter:'int'
                    size_hint: 1, None
#                    disabled: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    multiline: False
                    cursor_color: 75/255, 0/255, 130/255, 1
                    background_color: 0, 0, 0, 0
                    padding: 15
                    font_size: '18sp'

            MDFloatLayout:
                size_hint: .2, .04
                pos_hint: {"center_x": .53, "center_y": .45}
                canvas:
                    Color:
                        rgb: (238/255, 238/255, 238/255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [25]
                TextInput:
                    id: square_width
                    hint_text: 'Width'
                    input_filter:'int'
                    size_hint: 1, None
#                    disabled: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    multiline: False
                    cursor_color: 75/255, 0/255, 130/255, 1
                    background_color: 0, 0, 0, 0
                    padding: 15
                    font_size: '18sp'

            MDFloatLayout:
                size_hint: .2, .04
                pos_hint: {"center_x": .47, "center_y": .405}
                canvas:
                    Color:
                        rgb: (238/255, 238/255, 238/255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [25]
                TextInput:
                    id: circle_diameter
                    hint_text: 'Diam.'
                    input_filter:'int'
                    size_hint: 1, None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    multiline: False
                    cursor_color: 75/255, 0/255, 130/255, 1
                    background_color: 0, 0, 0, 0
                    padding: 15
                    font_size: '18sp'

        Buttons:
            text: 'Result'
            pos_hint: {"center_x": .18, "center_y": .2}
            size_hint: .25, .1
            font_size: '30sp'
            on_release:
                app.result_price()
                app.coefficient(square.state, circle.state, square_length.text, square_width.text, circle_diameter.text)
#                main_price.text = 'Price'
                weight.text = str(app.weight)+' Gr'
                result_price.text = str(app.coeff)

        MDFloatLayout:
            size_hint: .25, .08
            pos_hint: {"center_x": .5, "center_y": .2}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            MDLabel:
                id: result_price
                text: ' '
                font_size: '20sp'
                pos_hint: {"center_x": .6, "center_y": .5}
        MDFloatLayout:
            size_hint: .25, .08
            pos_hint: {"center_x": .8, "center_y": .2}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            MDLabel:
                id: weight
                text: ''
                font_size: '20sp'
                pos_hint: {"center_x": .6, "center_y": .5}

        Buttons:
            text: 'Download as PDF'
            pos_hint: {"center_x": .5, "center_y": .1}
            size_hint: .9, .05
            font_size: '30sp'
            on_release:
                main_price.text = 'Done'

