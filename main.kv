

<MainPageRecipe>:
    id: MainPageRecipe
    elevation: 10
    md_bg_color: 1,1,1,1
    radius: [8]

    MDLabel:
        id: Renames
        text: str(root.Renames)
        markup: True
        font_size: '20sp'
        size_hint_x: .8
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        pos_hint: {"center_x": .45, "center_y": .4}
    MDLabel:
        id: Diameter
        text: str(root.Diameter)+' cm'
        markup: True
        size_hint_x: .35
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        pos_hint: {"center_x": .85, "center_y": .4}
    ToggleButton:
        id: addRemove
        pos_hint: {"center_x": .9, "center_y": .4}
        size_hint: .16, .9
        text: 'Remove' if self.state == 'normal' else 'Rmd'
        on_release:
            MainPageRecipe.parent.remove_widget(MainPageRecipe)
        background_color: (0,0,0,0)
        background_normal: ''
        canvas.before:
            Color:
                rgba: (75/255, 0/255, 130/255, 1) if self.state == 'normal' else (75/255, 0/255, 130/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [18]

<CustomPopup>:
    id: popup
    auto_dismiss: False
    contentBox: content_box
    BoxLayout:
        id: content_box
        orientation: "vertical"
        content: content_text
        size_hint: .01, 1

        MDLabel:
            text: '  Ingredients:'
            size_hint: .9, .1
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: '20sp'
        ScrollView:
            effect_cls: "ScrollEffect" # prevents overscrolling
            MDLabel:
                id: content_text
                size_hint_y: None
                height: self.texture_size[1]
                text: str(root.unit)
                text_size: (self.width-40), None
                font_size: '18sp'
                line_height: 1.2
                valign: "top"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: 216/255, 193/255, 222/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                        source: 'image/1.png'

        MDLabel:
            text: '  Comment:'
            size_hint: .9, .1
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: '20sp'
        ScrollView:
            effect_cls: "ScrollEffect" # prevents overscrolling
            Label:
                id: content_text
                size_hint_y: None
                height: self.texture_size[1]
                text: str(root.Recomment)
                text_size: (self.width-40), None
                font_size: '18sp'
                line_height: 1.2
                valign: "top"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: 216/255, 193/255, 222/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                        source: 'image/1.png'

        Buttons:
            text: "Close"
#            size_hint: None, .1
            pos_hint: {"center_x": .5, "center_y": .5}
            height: "40dp"
            on_press: root.dismiss()

<CompleteRecipe>
    id: CompleteRecipe
    elevation: 1
    md_bg_color: 1,1,1,1
    radius: [20]
    orientation: "vertical"

    MDFloatLayout:
        id: bar
        radius: [20]
        size_hint: .6, .9
        pos_hint: {"center_x": .5, "center_y": .5}
        md_bg_color: 75/255, 0/255, 130/255, .2 #if UnitC.text == 'cake' else (255/255, 102/255, 0/255, .5)
    MDFloatLayout:
        size_hint: .11, .9
        pos_hint: {"center_x": .75, "center_y": .5}
        canvas:
            Color:
                rgb: (210/255, 210/255, 210/255, .5)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]
        TextInput:
            id: Diameter
            hint_text: 'D'
            multiline: False
            font_size: '18sp'
            size_hint: 1, None
            height: 55
            input_filter: 'int'
            cursor_color: 75/255, 0/255, 130/255, 1
            background_color: 0,0,0,0
            pos_hint: {"center_x": .5, "center_y": .5}

    MDLabel:
        id: Renames
        text: str(root.Renames)
        markup: True
        font_size: '25sp'
        size_hint_x: .8
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        pos_hint: {"center_x": .65, "center_y": .5}

    Buttons:
        id: show
        pos_hint: {"center_x": .9, "center_y": .5}
        size_hint: .16, .9
        text: 'Show'
        on_release:
            app.show_recipe(Renames.text)

    ToggleButton:
        id: Calc
        text: 'Add' if self.state == 'normal' else 'Added'
        on_release:
            app.add_ing_to_mainpage(Renames.text, Diameter.text)
            self.state = 'down'
            self.disabled = True
        size_hint: .15, .7
        font_size: '18sp'
        pos_hint: {"center_x": .1, "center_y": .5}
        background_color: (0,0,0,0)
        background_normal: ''
        canvas.before:
            Color:
                rgba: (75/255, 0/255, 130/255, .3) if self.state == 'normal' else (75/255, 0/255, 130/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [18]


